# ===================================
# VARIABLES DE ENTORNO - PRODUCCIÓN
# ===================================
# Copiar este archivo como .env.production en producción
# y completar con los valores reales

# Puerto del servidor
PORT=3000
NODE_ENV=production

# CORS - Dominio permitido (sin trailing slash)
# En desarrollo: http://localhost:5173
# En producción: https://tudominio.com
ALLOWED_ORIGIN=https://tudominio.com

# Base de datos
DB_PATH=./db/database_vieja.db

# Configuración SMTP para alertas de stock
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-contraseña-de-aplicacion

# Email de alertas
ALERT_EMAIL=destinatario@ejemplo.com

# Seguridad
# Rate Limiting: Máximo de requests por ventana de tiempo
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
