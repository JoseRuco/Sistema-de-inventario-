# ===================================
# VARIABLES DE ENTORNO - PRODUCCIÓN
# ===================================

# Puerto del servidor
PORT=3000
NODE_ENV=production

# CORS - Actualizar con tu dominio real
ALLOWED_ORIGIN=https://tudominio.com

# Base de datos
DB_PATH=./db/inventory.db

# Configuración SMTP para alertas de stock
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Email de alertas
ALERT_EMAIL=

# Seguridad
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
